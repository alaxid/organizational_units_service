<% @secretaries.each do |secretary| %>
  <tr>
    <td><%= secretary.secretary_name %></td>
    <td><%= secretary.email %></td>
    <td><%= link_to 'Show', secretary %></td>
    <td><%= link_to 'Edit', edit_secretary_path(secretary) %></td>
    <td><%= link_to 'Destroy', secretary, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

